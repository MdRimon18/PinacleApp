@model Domain.Entity.Settings.Suppliers
<div class="row g-lg-3 font-sans-serif">
    <div class="col-lg-8">
       
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Create Your Profile</h5>
            </div>
            <div class="card-body bg-body-tertiary">
                <form asp-action="SaveOrUpdate" asp-controller="Supplier" method="post" class="form-horizontal">
                    <div class="card-body bg-body-tertiary container">
                        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.SuccessMessage
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.DangerMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.DangerMessage
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-6">
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="SupplrName" class="form-label fw-semi-bold">Name<span class="error-star">*</span></label>
                                        <input asp-for="SupplrName" class="form-control form-control-sm form-rounded" placeholder="Enter Name" />
                                        <span asp-validation-for="SupplrName" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="MobileNo" class="form-label fw-semi-bold">Enter Mobile No<span class="error-star">*</span></label>
                                        <input asp-for="MobileNo" class="form-control form-control-sm form-rounded" placeholder="Enter Mobile No" />
                                        <span asp-validation-for="MobileNo" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="Email" class="form-label fw-semi-bold">Email<span class="error-star">*</span></label>
                                        <input asp-for="Email" class="form-control form-control-sm form-rounded" placeholder="Write Email" />
                                        <span asp-validation-for="Email" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="SuppOrgnznName" class="form-label fw-semi-bold">Organization Name<span class="error-star">*</span></label>
                                        <input asp-for="SuppOrgnznName" class="form-control form-control-sm form-rounded" placeholder="Organization Name" />
                                        <span asp-validation-for="SuppOrgnznName" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="SupplrName" class="form-label fw-semi-bold">Specialization  Area<span class="error-star">*</span></label>
                                        <textarea asp-for="SupplrName" class="form-control form-control-sm form-rounded" placeholder="Enter Specialization Area" rows="1"></textarea>

                                        <span asp-validation-for="SupplrName" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="MobileNo" class="form-label fw-semi-bold">Enter Address one<span class="error-star">*</span></label>
                                        <textarea asp-for="SupplrName" class="form-control form-control-sm form-rounded" placeholder="Enter Specialization Area" rows="1"></textarea>

                                        <span asp-validation-for="MobileNo" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="Email" class="form-label fw-semi-bold">Enter Address Two<span class="error-star">*</span></label>
                                        <textarea asp-for="SupplrName" class="form-control form-control-sm form-rounded" placeholder="Enter Address Two" rows="1"></textarea>

                                        <span asp-validation-for="Email" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <label for="Email" class="form-label fw-semi-bold">Enter Address Three<span class="error-star">*</span></label>
                                        <textarea asp-for="SupplrName" class="form-control form-control-sm form-rounded" placeholder="Enter Address Three" rows="1"></textarea>

                                        <span asp-validation-for="Email" class="text-left invalid-message-color"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label" for="course-tags">Tags<span class="text-danger">*</span></label>
                                    <input class="form-control js-choice" id="course-tags" type="text" name="tags" required="required" size="1" data-placeholder="Select upto 4 tags" data-options='{"removeItemButton":true,"placeholder":true}' />
                                </div>
                               
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-12">
                                <label class="form-label" for="course-description">Course Description<span class="text-danger">*</span></label>
                                <div class="create-course-description-textarea">
                                    <textarea class="tinymce d-none" data-tinymce="data-tinymce" name="course-description" id="course-description" required="required"></textarea>
                                </div>
                            </div>
                         </div>
                        <button type="submit" class="btn btn-primary btn-sm mt-2">Save</button>
                        <button type="reset" class="btn btn-primary btn-sm mt-2">Refresh</button>
                    </div>
                </form>
            </div>
        </div>
