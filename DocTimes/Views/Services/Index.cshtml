@using DocTimes.Views.Services

 

<div class="row mt-5">
    <div class="col-lg-4 col-xl-4 col-xxl-4 h-100">
        <div class="card">
            <div class="card-header bg-body-tertiary">
                <h5 class="mb-0">Dentist Services</h5>
            </div>
            <div class="card-body fs-10 p-0">
                <a class="border-bottom-0 notification rounded-0 border-x-0 border border-300" href="#!">
                    <div class="notification-body">
                        <p class="mb-1"><strong>Teeth Cleaning</strong> - A thorough cleaning for a healthier smile.</p>
                        <span class="notification-time">Available: Daily</span>
                    </div>
                </a>
                <a class="border-bottom-0 notification rounded-0 border-x-0 border border-300" href="#!">
                    <div class="notification-body">
                        <p class="mb-1"><strong>Dental Fillings</strong> - Get cavities treated quickly and efficiently.</p>
                        <span class="notification-time">Available: Monday to Friday</span>
                    </div>
                </a>
                <a class="border-bottom-0 notification rounded-0 border-x-0 border border-300" href="#!">
                    <div class="notification-body">
                        <p class="mb-1"><strong>Teeth Whitening</strong> - Brighten your smile with professional whitening.</p>
                        <span class="notification-time">Available: Weekends</span>
                    </div>
                </a>
                <a class="border-bottom-0 notification rounded-0 border-x-0 border border-300" href="#!">
                    <div class="notification-body">
                        <p class="mb-1"><strong>Root Canal</strong> - Expert care for tooth infections.</p>
                        <span class="notification-time">Available: By Appointment</span>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-8 col-xl-8 col-xxl-8 h-100">
        <div class="card">
            <div class="card-header bg-body-tertiary">
                <h5 class="mb-0">Add New Service</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label" for="service-name">Service Name</label>
                        <input class="form-control" placeholder="Enter service name" type="text" id="service-name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="service-description">Service Description</label>
                        <textarea class="form-control" placeholder="Enter service description" id="service-description"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="availability">Availability</label>
                        <select class="form-select" id="availability">
                            <option value="Daily">Daily</option>
                            <option value="Weekdays">Weekdays</option>
                            <option value="Weekends">Weekends</option>
                            <option value="By Appointment">By Appointment</option>
                        </select>
                    </div>
                    <button class="btn btn-primary">Add Service</button>
                </form>
            </div>
        </div>
    </div>
</div>
